<h1>To do!</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.title, task_path(task) %> -
      <%= link_to "🗑️", delete_task_path(task), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this task?" }, class: "delete-link" %>
    </li>
  <% end %>
</ul>

<%= link_to "Add a new task!", "/tasks/new" %>
